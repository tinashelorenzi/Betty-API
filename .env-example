# Firebase Configuration
FIREBASE_CREDENTIALS_PATH=/path/to/your/firebase-service-account.json
# OR alternatively, use JSON string:
# FIREBASE_CREDENTIALS_JSON={"type": "service_account", "project_id": "your-project-id", ...}

# Google AI (Gemini) Configuration
GOOGLE_AI_API_KEY=your_gemini_api_key_here

# FastAPI Configuration
DEBUG=True
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# CORS Configuration (comma-separated list)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000

# JWT Configuration (generate secure secret keys)
JWT_SECRET_KEY=your_super_secret_jwt_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# Google OAuth (for Google Workspace integrations)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# Database Configuration (if using additional databases)
# MONGODB_URL=mongodb://localhost:27017/betty
# REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com  
# SMTP_PASSWORD=your_app_password
# SMTP_USE_TLS=True

# File Storage Configuration
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_BUCKET=betty-app-storage
# AWS_S3_REGION=us-east-1

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Application Settings
APP_NAME=Betty - Office Genius API
APP_VERSION=1.0.0
APP_DESCRIPTION=Backend API for Betty, your AI-powered office assistant

# Security Settings
BCRYPT_ROUNDS=12
SESSION_TIMEOUT_MINUTES=30

# AI Configuration
AI_MAX_TOKENS=2048
AI_TEMPERATURE=0.7
AI_CONVERSATION_MEMORY_LIMIT=10

# Feature Flags
ENABLE_GOOGLE_INTEGRATIONS=True
ENABLE_EMAIL_NOTIFICATIONS=False
ENABLE_FILE_UPLOADS=True
ENABLE_RATE_LIMITING=True